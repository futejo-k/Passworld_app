<Window x:Class="Passworld_app.NewPwd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="New Password | Passworld" 
      Height="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}"
      Width="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}">
    <Canvas Background="#383838">
        <Button
            Width="20"
            Height="20"
            Cursor="Hand"
            Canvas.Top="20"
            Canvas.Left="20"
            x:Name="Back"
            Click="Back_OnClick">
        </Button>
        <TextBlock
            Canvas.Top="100"
            Canvas.Left="545"
            FontSize="70"
            FontFamily="Space Grotesk"
			FontWeight="Bold"
            Foreground="#FFFFFF"
        >New Password</TextBlock>
        <Rectangle
            Width="650"
            Height="450"
            Fill="#4A4A4A"
            Stroke="#848484"
            RadiusX="20" RadiusY="20"
            Canvas.Left="450"
            Canvas.Top="250" />
    </Canvas>
</Window>
